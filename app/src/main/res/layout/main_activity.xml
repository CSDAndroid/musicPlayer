<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="用户名"
        android:drawableStart="@mipmap/ic_launcher_round"/>

    <Button
        android:id="@+id/Like"
        android:layout_width="wrap_content"
        android:layout_height="125dp"
        android:text="我喜欢的"
        android:drawableStart="@drawable/heart"
        android:layout_below="@id/user"/>

    <Button
        android:id="@+id/recent"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignTop="@id/Like"
        android:layout_toEndOf="@+id/Like"
        android:text="最近"/>

    <Button
        android:id="@+id/local"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignTop="@id/recent"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/recent"
        android:text="本地"/>

    <Button
        android:id="@+id/all"
        android:layout_width="290dp"
        android:layout_height="65dp"
        android:layout_below="@id/recent"
        android:layout_alignBottom="@+id/Like"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/Like"
        android:text="全部"/>

<!--    <com.example.myapplication.MusicPlayer-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_alignParentBottom="true"/>-->

</RelativeLayout>