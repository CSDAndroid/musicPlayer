<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <SeekBar
            android:id="@+id/SeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_progress"/>

        <TextView
            android:id="@+id/tv_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/onClickBroadcast"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:text="00:00"/>

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/onClickBroadcast"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:text="00:00"/>

        <ImageView
            android:id="@+id/image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true" />

        <TextView
            android:id="@+id/Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/SeekBar"
            android:layout_toRightOf="@id/image"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="27dp"
            android:text="歌曲名字"
            android:textColor="#023650"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Name"
            android:layout_toRightOf="@id/image"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="艺术家"
            android:textColor="#023650"
            android:textSize="9sp"/>

        <Button
            android:id="@+id/onClickLastSong"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:layout_toLeftOf="@id/onClickBroadcast"
            android:layout_alignParentBottom="true"
            android:text="上"/>

        <Button
            android:id="@+id/onClickBroadcast"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:layout_toLeftOf="@id/onClickNextSong"
            android:layout_alignParentBottom="true"
            android:text="放"/>

        <Button
            android:id="@+id/onClickNextSong"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:text="下"/>

</RelativeLayout>